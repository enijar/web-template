{
  "type": "module",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development conc -n client,server,emails \"npm run start:client\" \"npm run start:server\" \"npm run start:emails\"",
    "build": "NODE_ENV=production npm run build:client && npm run build:server",
    "check": "tsc --noEmit",
    "test": "NODE_ENV=test exit 0",
    "format": "prettier --write src",
    "start:emails": "email dev -d src/emails -p 9999",
    "start:client": "vite",
    "start:server": "tsx --watch src/server/index.ts",
    "build:client": "vite build",
    "build:server": "rm -rf build/{config,server} && tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "env:encrypt:dev": "dotenvx encrypt -f .env.dev",
    "env:encrypt:prod": "dotenvx encrypt -f .env.prod",
    "env:decrypt:dev": "dotenvx decrypt -f .env.dev",
    "env:decrypt:prod": "dotenvx decrypt -f .env.prod"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.52.0",
    "@hono/node-server": "1.19.9",
    "@hono/trpc-server": "0.4.2",
    "@react-email/components": "1.0.7",
    "@sendgrid/mail": "8.1.6",
    "@sequelize/core": "7.0.0-alpha.48",
    "@sequelize/mysql": "7.0.0-alpha.48",
    "@sequelize/sqlite3": "7.0.0-alpha.48",
    "@tanstack/react-query": "5.90.21",
    "@trpc/client": "11.10.0",
    "@trpc/react-query": "11.10.0",
    "@trpc/server": "11.10.0",
    "argon2": "0.44.0",
    "dotenv": "17.3.1",
    "hono": "4.11.9",
    "jose": "6.1.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-router-dom": "7.13.0",
    "styled-components": "6.3.9",
    "zod": "4.3.6",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@react-email/preview-server": "5.2.8",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "babel-plugin-styled-components": "2.1.4",
    "concurrently": "9.2.1",
    "prettier": "3.8.1",
    "react-email": "5.2.8",
    "tsc-alias": "1.8.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-tsconfig-paths": "6.1.1"
  }
}
